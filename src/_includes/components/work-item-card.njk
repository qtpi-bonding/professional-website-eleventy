{#
  Work Item Card Component
  
  Unified component for displaying both projects and publications.
  Handles different display types, collaborators/co-authors, technologies/journal info,
  media display, and external links with security attributes.
  
  Parameters:
  - workItem: work item object with frontmatter data (required)
  - content: work item content/description (optional)
  - showContent: whether to show the full content (optional, defaults to true)
  - showMedia: whether to show media (screenshot/TOC image) (optional, defaults to true)
  - class: additional CSS classes (optional)
#}

{% set work = workItem.data or workItem %}
{% set workContent = content or workItem.templateContent %}
{% set showDesc = showContent if showContent !== undefined else true %}
{% set showImg = showMedia if showMedia !== undefined else true %}

<article class="work-item-card {{ class or '' }}" 
         data-tags="{{ work.tags | join(',') }}"
         data-type="{{ work.type }}"
         itemscope 
         itemtype="{% if work.type == 'publication' %}https://schema.org/ScholarlyArticle{% else %}https://schema.org/CreativeWork{% endif %}">
  
  {# Card container with theme styling #}
  <div class="work-item-card__container bg-surface border border-neutral-200 rounded-lg shadow-sm hover:shadow-md transition-all duration-200 overflow-hidden">
    
    {# Media section (screenshot for projects, TOC image for publications) #}
    {% if showImg and work.media and (work.media.screenshot or work.media.tocImage) %}
      <div class="work-item-card__media relative overflow-hidden bg-neutral-100">
        {% set mediaUrl = work.media.screenshot or work.media.tocImage %}
        {% set mediaAlt = work.media.alt or (work.title + " " + work.type + " image") %}
        
        <img src="{{ mediaUrl }}" 
             alt="{{ mediaAlt }}"
             class="w-full h-48 sm:h-56 object-cover transition-transform duration-300 hover:scale-105"
             loading="lazy"
             itemprop="image">
        
        {# Type indicator overlay #}
        <div class="absolute top-3 left-3">
          <span class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-medium bg-surface bg-opacity-90 text-text shadow-sm">
            {% if work.type == 'publication' %}
              <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                <path fill-rule="evenodd" d="M4 4a2 2 0 012-2h4.586A2 2 0 0112 2.586L15.414 6A2 2 0 0116 7.414V16a2 2 0 01-2 2H6a2 2 0 01-2-2V4zm2 6a1 1 0 011-1h6a1 1 0 110 2H7a1 1 0 01-1-1zm1 3a1 1 0 100 2h6a1 1 0 100-2H7z" clip-rule="evenodd"></path>
              </svg>
              Publication
            {% else %}
              <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                <path fill-rule="evenodd" d="M3 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1z" clip-rule="evenodd"></path>
              </svg>
              Project
            {% endif %}
          </span>
        </div>
        
        {# Featured indicator #}
        {% if work.featured %}
          <div class="absolute top-3 right-3">
            <span class="inline-flex items-center p-1.5 rounded-full bg-warning bg-opacity-90 text-surface shadow-sm" 
                  aria-label="Featured work"
                  title="Featured work">
              <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
              </svg>
            </span>
          </div>
        {% endif %}
      </div>
    {% endif %}
    
    {# Header section with title and meta info #}
    <header class="work-item-card__header p-6 pb-4">
      <div class="flex items-start justify-between gap-4 mb-3">
        
        {# Title and description #}
        <div class="flex-1 min-w-0">
          <h3 class="work-item-card__title text-lg font-semibold text-text mb-2 leading-tight font-headline" 
              itemprop="name">
            {{ work.title }}
          </h3>
          
          <p class="work-item-card__description text-sm text-textSecondary leading-relaxed" 
             itemprop="description">
            {{ work.description }}
          </p>
        </div>
        
        {# Status indicator (if not featured and no media) #}
        {% if not work.featured and not (showImg and work.media) %}
          <div class="work-item-card__type flex-shrink-0">
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
                         bg-primary bg-opacity-10 text-text border border-primary border-opacity-20">
              {{ work.type | capitalize }}
            </span>
          </div>
        {% endif %}
      </div>
      
      {# Meta information row #}
      <div class="work-item-card__meta flex flex-wrap items-center gap-4 text-sm text-textSecondary">
        
        {# Year #}
        {% if work.year %}
          <div class="flex items-center" itemprop="datePublished" content="{{ work.year }}">
            <svg class="w-4 h-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
            </svg>
            <span>{{ work.year }}</span>
          </div>
        {% endif %}
        
        {# Journal (for publications) #}
        {% if work.type == 'publication' and work.journal %}
          <div class="flex items-center" itemprop="publisher" itemscope itemtype="https://schema.org/Organization">
            <svg class="w-4 h-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
            </svg>
            <span itemprop="name">{{ work.journal }}</span>
          </div>
        {% endif %}
        
        {# Status #}
        {% if work.status %}
          <div class="flex items-center">
            <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-neutral-100 text-textSecondary">
              {{ work.status | capitalize }}
            </span>
          </div>
        {% endif %}
      </div>
    </header>
    
    {# Content section #}
    {% if showDesc and workContent %}
      <div class="work-item-card__content px-6 pb-4">
        <div class="prose prose-sm max-w-none text-textSecondary">
          {{ workContent | safe }}
        </div>
      </div>
    {% endif %}
    
    {# Collaborators/Technologies section #}
    {% if work.collaborators or work.technologies %}
      <div class="work-item-card__details px-6 pb-4">
        
        {# Collaborators (for publications) or Co-authors #}
        {% if work.collaborators and work.collaborators.length > 0 %}
          <div class="mb-3">
            <h4 class="text-xs font-semibold text-textSecondary uppercase tracking-wide mb-2">
              {% if work.type == 'publication' %}{{ site.content.labels.workItems.coAuthors }}{% else %}{{ site.content.labels.workItems.collaborators }}{% endif %}
            </h4>
            <div class="flex flex-wrap gap-2">
              {% for collaborator in work.collaborators %}
                <span class="inline-flex items-center px-2.5 py-1 rounded-md text-xs font-medium bg-neutral-100 text-textSecondary"
                      itemprop="{% if work.type == 'publication' %}author{% else %}contributor{% endif %}">
                  {{ collaborator }}
                </span>
              {% endfor %}
            </div>
          </div>
        {% endif %}
        
        {# Technologies (for projects only) #}
        {% if work.type == 'project' and work.technologies and work.technologies.length > 0 %}
          <div class="mb-3">
            <h4 class="text-xs font-semibold text-textSecondary uppercase tracking-wide mb-2">
              {{ site.content.labels.workItems.technologies }}
            </h4>
            <div class="flex flex-wrap gap-2">
              {% for tech in work.technologies %}
                <span class="inline-flex items-center px-2.5 py-1 rounded-md text-xs font-medium bg-neutral-100 text-textSecondary"
                      itemprop="keywords">
                  {{ tech }}
                </span>
              {% endfor %}
            </div>
          </div>
        {% endif %}
      </div>
    {% endif %}
    
    {# Footer with tags and links #}
    <footer class="work-item-card__footer px-6 py-4 bg-neutral-100 border-t border-neutral-200">
      <div class="flex items-center justify-between gap-4">
        
        {# Tags #}
        <div class="work-item-card__tags flex flex-wrap gap-2" role="list" aria-label="Work categories">
          {% for tag in work.tags %}
            <span class="work-item-card__tag inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium text-text
                         {% if tag == 'science' %}bg-science bg-opacity-10 border border-science border-opacity-20
                         {% elif tag == 'policy' %}bg-policy bg-opacity-10 border border-policy border-opacity-20
                         {% elif tag == 'tech' %}bg-tech bg-opacity-10 border border-tech border-opacity-20
                         {% else %}bg-neutral-100{% endif %}"
                  role="listitem"
                  itemprop="keywords">
              {{ tag | capitalize }}
            </span>
          {% endfor %}
        </div>
        
        {# External links #}
        {% if work.links %}
          <div class="work-item-card__links flex items-center gap-2 flex-shrink-0">
            
            {# Demo link (projects) #}
            {% if work.links.demo %}
              <a href="{{ work.links.demo }}" 
                 target="_blank" 
                 rel="noopener noreferrer"
                 class="inline-flex items-center p-2 rounded-md text-textSecondary hover:text-primary hover:bg-primary hover:bg-opacity-10 transition-colors duration-150"
                 aria-label="{{ site.content.labels.workItems.viewDemo }}"
                 title="{{ site.content.labels.workItems.viewDemo }}">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                </svg>
              </a>
            {% endif %}
            
            {# GitHub link #}
            {% if work.links.github %}
              <a href="{{ work.links.github }}" 
                 target="_blank" 
                 rel="noopener noreferrer"
                 class="inline-flex items-center p-2 rounded-md text-textSecondary hover:text-text hover:bg-neutral-100 transition-colors duration-150"
                 aria-label="{{ site.content.labels.workItems.viewSourceCode }}"
                 title="{{ site.content.labels.workItems.viewSourceCode }}">
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd"></path>
                </svg>
              </a>
            {% endif %}
            
            {# Live site link (projects) #}
            {% if work.links.live %}
              <a href="{{ work.links.live }}" 
                 target="_blank" 
                 rel="noopener noreferrer"
                 class="inline-flex items-center p-2 rounded-md text-textSecondary hover:text-success hover:bg-success hover:bg-opacity-10 transition-colors duration-150"
                 aria-label="{{ site.content.labels.workItems.viewLiveSite }}"
                 title="{{ site.content.labels.workItems.viewLiveSite }}">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"></path>
                </svg>
              </a>
            {% endif %}
            
            {# DOI link (publications) #}
            {% if work.links.doi %}
              <a href="{{ work.links.doi }}" 
                 target="_blank" 
                 rel="noopener noreferrer"
                 class="inline-flex items-center p-2 rounded-md text-textSecondary hover:text-secondary hover:bg-secondary hover:bg-opacity-10 transition-colors duration-150"
                 aria-label="{{ site.content.labels.workItems.viewDOI }}"
                 title="{{ site.content.labels.workItems.viewDOI }}"
                 itemprop="sameAs">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1"></path>
                </svg>
              </a>
            {% endif %}
            
            {# External link #}
            {% if work.links.external %}
              <a href="{{ work.links.external }}" 
                 target="_blank" 
                 rel="noopener noreferrer"
                 class="inline-flex items-center p-2 rounded-md text-textSecondary hover:text-info hover:bg-info hover:bg-opacity-10 transition-colors duration-150"
                 aria-label="View external link"
                 title="View external link">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                </svg>
              </a>
            {% endif %}
          </div>
        {% endif %}
      </div>
    </footer>
  </div>
</article>

<style>
  /* Work item card responsive design */
  .work-item-card {
    @apply w-full;
  }
  
  .work-item-card__container {
    @apply transition-all duration-200 ease-in-out;
  }
  
  .work-item-card__container:hover {
    @apply shadow-lg;
    transform: translateY(-2px);
  }
  
  /* Media section styling */
  .work-item-card__media img {
    @apply transition-transform duration-300 ease-in-out;
  }
  
  .work-item-card__container:hover .work-item-card__media img {
    transform: scale(1.02);
  }
  
  /* Title and description styling */
  .work-item-card__title {
    line-height: 1.3;
  }
  
  .work-item-card__description {
    line-height: 1.5;
  }
  
  /* Content prose styling */
  .work-item-card__content .prose {
    @apply text-textSecondary;
  }
  
  .work-item-card__content .prose h1,
  .work-item-card__content .prose h2,
  .work-item-card__content .prose h3,
  .work-item-card__content .prose h4,
  .work-item-card__content .prose h5,
  .work-item-card__content .prose h6 {
    @apply text-text;
  }
  
  .work-item-card__content .prose strong {
    @apply text-text font-semibold;
  }
  
  .work-item-card__content .prose ul,
  .work-item-card__content .prose ol {
    @apply space-y-1;
  }
  
  /* Tag and link hover effects */
  .work-item-card__tag {
    @apply transition-all duration-150 ease-in-out;
    @apply hover:scale-105;
  }
  
  .work-item-card__links a {
    @apply transition-all duration-150 ease-in-out;
  }
  
  .work-item-card__links a:hover {
    transform: translateY(-1px);
  }
  
  /* Responsive adjustments */
  @media (max-width: 640px) {
    .work-item-card__header {
      @apply p-4 pb-3;
    }
    
    .work-item-card__content {
      @apply px-4 pb-3;
    }
    
    .work-item-card__details {
      @apply px-4 pb-3;
    }
    
    .work-item-card__footer {
      @apply px-4 py-3;
    }
    
    .work-item-card__title {
      @apply text-base;
    }
    
    .work-item-card__description {
      @apply text-xs;
    }
    
    .work-item-card__meta {
      @apply text-xs;
    }
    
    .work-item-card__footer {
      @apply flex-col items-start gap-3;
    }
    
    .work-item-card__links {
      @apply self-end;
    }
  }
  
  /* High contrast mode support */
  @media (prefers-contrast: high) {
    .work-item-card__container {
      @apply border-2;
    }
    
    .work-item-card__tag {
      @apply border-2;
    }
  }
  
  /* Reduced motion support */
  @media (prefers-reduced-motion: reduce) {
    .work-item-card__container {
      @apply transition-none;
    }
    
    .work-item-card__container:hover {
      transform: none;
    }
    
    .work-item-card__media img {
      @apply transition-none;
    }
    
    .work-item-card__container:hover .work-item-card__media img {
      transform: none;
    }
    
    .work-item-card__tag {
      @apply transition-none;
    }
    
    .work-item-card__tag:hover {
      transform: none;
    }
    
    .work-item-card__links a {
      @apply transition-none;
    }
    
    .work-item-card__links a:hover {
      transform: none;
    }
  }
  
  /* Print styles */
  @media print {
    .work-item-card__container {
      @apply shadow-none border border-neutral-400;
      break-inside: avoid;
    }
    
    .work-item-card__container:hover {
      transform: none;
      @apply shadow-none;
    }
    
    .work-item-card__links {
      display: none;
    }
  }
</style>