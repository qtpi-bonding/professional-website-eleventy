{#
  Experience Card Component
  
  Displays professional experience entries with title, organization, date range, location, and tags.
  Implements responsive design and theme integration.
  
  Parameters:
  - experience: experience object with frontmatter data (required)
  - content: experience content/description (optional)
  - showContent: whether to show the full content (optional, defaults to true)
  - class: additional CSS classes (optional)
#}

{% set exp = experience.data or experience %}
{% set expContent = content or experience.templateContent %}
{% set showDesc = showContent if showContent !== undefined else true %}

<article class="experience-card {{ class or '' }}" 
         data-tags="{{ exp.tags | join(',') }}"
         itemscope 
         itemtype="https://schema.org/WorkExperience">
  
  {# Card container with theme styling #}
  <div class="experience-card__container bg-surface border border-neutral-200 rounded-lg shadow-sm hover:shadow-md transition-shadow duration-200 overflow-hidden">
    
    {# Header section with title and organization #}
    <header class="experience-card__header p-6 pb-4">
      <div class="flex flex-col sm:flex-row sm:items-start sm:justify-between gap-2 sm:gap-4">
        
        {# Title and organization #}
        <div class="flex-1 min-w-0">
          <h3 class="experience-card__title text-lg font-semibold text-text mb-1 leading-tight" 
              itemprop="jobTitle">
            {{ exp.title }}
          </h3>
          
          <div class="experience-card__organization text-base font-medium text-secondary mb-2" 
               itemprop="hiringOrganization" 
               itemscope 
               itemtype="https://schema.org/Organization">
            <span itemprop="name">{{ exp.organization }}</span>
          </div>
        </div>
        
        {# Status indicator for current positions #}
        {% if exp.status == 'current' %}
          <div class="experience-card__status flex-shrink-0">
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-success bg-opacity-10 text-text border border-success border-opacity-20">
              <span class="w-1.5 h-1.5 bg-success rounded-full mr-1.5 animate-pulse"></span>
              Current
            </span>
          </div>
        {% endif %}
      </div>
      
      {# Date range and location #}
      <div class="experience-card__meta flex flex-col sm:flex-row sm:items-center gap-2 sm:gap-4 text-sm text-textSecondary">
        <div class="experience-card__dates flex items-center" 
             itemprop="datePublished">
          <svg class="w-4 h-4 mr-1.5 text-textSecondary" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
          </svg>
          <time>{{ exp.dateRange }}</time>
        </div>
        
        {% if exp.location %}
          <div class="experience-card__location flex items-center" 
               itemprop="jobLocation" 
               itemscope 
               itemtype="https://schema.org/Place">
            <svg class="w-4 h-4 mr-1.5 text-textSecondary" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
            <span itemprop="name">{{ exp.location }}</span>
          </div>
        {% endif %}
      </div>
    </header>
    
    {# Content section #}
    {% if showDesc and expContent %}
      <div class="experience-card__content px-6 pb-4">
        <div class="prose prose-sm max-w-none text-text" itemprop="description">
          {{ expContent | safe }}
        </div>
      </div>
    {% endif %}
    
    {# Footer with tags #}
    <footer class="experience-card__footer px-6 py-4 bg-neutral-100 border-t border-neutral-200">
      <div class="flex items-center justify-between">
        
        {# Tags #}
        <div class="experience-card__tags flex flex-wrap gap-2" role="list" aria-label="Experience categories">
          {% for tag in exp.tags %}
            <span class="experience-card__tag inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium text-text
                         {% if tag == 'science' %}bg-science bg-opacity-10 border border-science border-opacity-20
                         {% elif tag == 'policy' %}bg-policy bg-opacity-10 border border-policy border-opacity-20
                         {% elif tag == 'tech' %}bg-tech bg-opacity-10 border border-tech border-opacity-20
                         {% else %}bg-neutral-100{% endif %}"
                  role="listitem"
                  itemprop="skills">
              {{ tag | capitalize }}
            </span>
          {% endfor %}
        </div>
        
        {# Featured indicator #}
        {% if exp.featured %}
          <div class="experience-card__featured flex-shrink-0 ml-4">
            <span class="inline-flex items-center text-xs font-medium text-warning" 
                  aria-label="Featured experience"
                  title="Featured experience">
              <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
              </svg>
            </span>
          </div>
        {% endif %}
      </div>
    </footer>
  </div>
</article>

<style>
  /* Experience card responsive design */
  .experience-card {
    @apply w-full;
  }
  
  .experience-card__container {
    @apply transition-all duration-200 ease-in-out;
  }
  
  .experience-card__container:hover {
    @apply shadow-lg;
    transform: translateY(-2px);
  }
  
  /* Title styling with proper line height */
  .experience-card__title {
    @apply font-headline;
    line-height: 1.3;
  }
  
  /* Organization name styling */
  .experience-card__organization {
    @apply font-body;
  }
  
  /* Meta information styling */
  .experience-card__meta {
    @apply font-body;
  }
  
  /* Content prose styling */
  .experience-card__content .prose {
    @apply text-textSecondary;
  }
  
  .experience-card__content .prose h1,
  .experience-card__content .prose h2,
  .experience-card__content .prose h3,
  .experience-card__content .prose h4,
  .experience-card__content .prose h5,
  .experience-card__content .prose h6 {
    @apply text-text;
  }
  
  .experience-card__content .prose strong {
    @apply text-text font-semibold;
  }
  
  .experience-card__content .prose ul,
  .experience-card__content .prose ol {
    @apply space-y-1;
  }
  
  .experience-card__content .prose li {
    @apply text-textSecondary;
  }
  
  /* Tag styling with hover effects */
  .experience-card__tag {
    @apply transition-all duration-150 ease-in-out;
    @apply hover:scale-105;
  }
  
  /* Status indicator animation */
  .experience-card__status .animate-pulse {
    animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
  }
  
  /* Featured star styling */
  .experience-card__featured svg {
    @apply drop-shadow-sm;
  }
  
  /* Responsive adjustments */
  @media (max-width: 640px) {
    .experience-card__header {
      @apply p-4 pb-3;
    }
    
    .experience-card__content {
      @apply px-4 pb-3;
    }
    
    .experience-card__footer {
      @apply px-4 py-3;
    }
    
    .experience-card__title {
      @apply text-base;
    }
    
    .experience-card__organization {
      @apply text-sm;
    }
    
    .experience-card__meta {
      @apply text-xs;
    }
  }
  
  /* High contrast mode support */
  @media (prefers-contrast: high) {
    .experience-card__container {
      @apply border-2;
    }
    
    .experience-card__tag {
      @apply border-2;
    }
  }
  
  /* Reduced motion support */
  @media (prefers-reduced-motion: reduce) {
    .experience-card__container {
      @apply transition-none;
    }
    
    .experience-card__container:hover {
      transform: none;
    }
    
    .experience-card__tag {
      @apply transition-none;
    }
    
    .experience-card__tag:hover {
      transform: none;
    }
    
    .experience-card__status .animate-pulse {
      animation: none;
    }
  }
  
  /* Print styles */
  @media print {
    .experience-card__container {
      @apply shadow-none border border-neutral-400;
      break-inside: avoid;
    }
    
    .experience-card__container:hover {
      transform: none;
      @apply shadow-none;
    }
  }
</style>