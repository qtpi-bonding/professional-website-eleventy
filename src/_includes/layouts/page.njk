---
layout: layouts/base.njk
---

{# Standard page layout with navigation #}
<div class="page-layout flex min-h-screen bg-surface">
  
  {# Left Sidebar - Navigation #}
  <aside class="page-sidebar fixed left-0 top-0 h-screen w-80 bg-neutral-900 dark:bg-neutral-950 text-neutral-100 overflow-y-auto z-10">
    <div class="sidebar-content p-8">
      
      {# Personal Information Header #}
      <header class="sidebar-header mb-8">
        <h1 class="text-2xl font-headline font-bold text-white mb-2">
          {{ site.author.name }}
        </h1>
        <p class="text-sm text-neutral-300 mb-4">
          {{ site.author.title or "Professional Title" }}
        </p>
      </header>
      
      {# Site Navigation #}
      <div class="mb-8">
        {% include "components/site-navigation.njk" %}
      </div>
      
      {# Quick Links #}
      <div class="sidebar-links mt-8 pt-8 border-t border-neutral-700">
        <h3 class="text-sm font-semibold text-neutral-400 uppercase tracking-wide mb-4">
          Quick Links
        </h3>
        <div class="space-y-2">
          <a href="/#about-section" 
             class="block px-4 py-2 text-neutral-300 hover:text-white hover:bg-neutral-800 rounded-md transition-colors duration-200">
            Portfolio Home
          </a>
          <a href="{{ site.resume.path }}" 
             target="_blank"
             class="block px-4 py-2 text-neutral-300 hover:text-white hover:bg-neutral-800 rounded-md transition-colors duration-200">
            Download Resume
          </a>
        </div>
      </div>
      
      {# Social Links #}
      <div class="sidebar-social mt-8 pt-8 border-t border-neutral-700">
        <div class="flex items-center gap-4">
          <a href="{{ site.social.github }}" 
             target="_blank" 
             rel="noopener noreferrer"
             class="text-neutral-400 hover:text-white transition-colors duration-200"
             aria-label="GitHub profile">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd"/>
            </svg>
          </a>
          
          <a href="{{ site.social.linkedin }}" 
             target="_blank" 
             rel="noopener noreferrer"
             class="text-neutral-400 hover:text-white transition-colors duration-200"
             aria-label="LinkedIn profile">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
            </svg>
          </a>
          
          <a href="{{ site.social.orcid }}" 
             target="_blank" 
             rel="noopener noreferrer"
             class="text-neutral-400 hover:text-white transition-colors duration-200"
             aria-label="ORCID profile">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path d="M12 0C5.372 0 0 5.372 0 12s5.372 12 12 12 12-5.372 12-12S18.628 0 12 0zM7.369 4.378c.525 0 .947.431.947.947s-.422.947-.947.947a.95.95 0 01-.947-.947c0-.525.422-.947.947-.947zm-.722 3.038h1.444v10.041H6.647V7.416zm3.562 0h3.9c3.712 0 5.344 2.653 5.344 5.025 0 2.578-2.016 5.016-5.325 5.016h-3.919V7.416zm1.444 1.303v7.444h2.297c2.359 0 3.881-1.303 3.881-3.722 0-2.016-1.522-3.722-3.881-3.722h-2.297z"/>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </aside>
  
  {# Main Content Area #}
  <main class="page-content flex-1 ml-80 min-h-screen" role="main">
    <div class="content-wrapper max-w-4xl mx-auto px-8 py-12">
      {% if title %}
        <header class="page-header mb-8">
          <h1 class="text-4xl md:text-5xl font-headline font-bold text-text leading-tight mb-4">{{ title }}</h1>
          {% if description %}
            <p class="text-xl font-body text-textSecondary leading-relaxed">{{ description }}</p>
          {% endif %}
        </header>
      {% endif %}
      
      <div class="page-content prose prose-lg max-w-none">
        {{ content | safe }}
      </div>
    </div>
  </main>
</div>

{# Mobile menu button #}
<button id="mobile-menu-button" 
        class="mobile-menu-button fixed top-4 left-4 z-50 p-2 bg-neutral-900 text-white rounded-md lg:hidden hidden"
        aria-label="Open navigation menu">
  <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
  </svg>
</button>

<style>
  /* Page layout styles */
  .page-layout {
    @apply min-h-screen;
  }
  
  .page-sidebar {
    @apply bg-neutral-900 text-neutral-100;
    box-shadow: 2px 0 10px rgba(0, 0, 0, 0.1);
  }
  
  .page-content {
    @apply flex-1 min-h-screen overflow-y-auto;
    margin-left: 20rem; /* 320px sidebar width */
  }
  
  .content-wrapper {
    @apply max-w-4xl mx-auto px-8 py-12;
  }
  
  .page-header {
    @apply mb-8;
  }
  
  /* Mobile responsiveness */
  @media (max-width: 1024px) {
    .page-sidebar {
      @apply fixed inset-y-0 left-0 z-50 w-80 transform -translate-x-full transition-transform duration-300;
    }
    
    .page-sidebar.sidebar--mobile-open {
      @apply translate-x-0;
    }
    
    .page-content {
      @apply ml-0;
    }
    
    .mobile-menu-button {
      @apply block;
    }
  }
  
  @media (max-width: 768px) {
    .page-sidebar {
      @apply w-full;
    }
    
    .content-wrapper {
      @apply px-4 py-8;
    }
  }
</style>

<script>
  // Mobile menu functionality for page layout
  document.addEventListener('DOMContentLoaded', function() {
    const mobileMenuButton = document.getElementById('mobile-menu-button');
    const sidebar = document.querySelector('.page-sidebar');
    
    if (mobileMenuButton && sidebar) {
      // Show mobile menu button
      mobileMenuButton.classList.remove('hidden');
      
      mobileMenuButton.addEventListener('click', function() {
        sidebar.classList.toggle('sidebar--mobile-open');
        
        // Update button icon
        const icon = this.querySelector('svg');
        if (sidebar.classList.contains('sidebar--mobile-open')) {
          icon.innerHTML = '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>';
          this.setAttribute('aria-label', 'Close navigation menu');
        } else {
          icon.innerHTML = '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>';
          this.setAttribute('aria-label', 'Open navigation menu');
        }
      });
      
      // Close sidebar when clicking outside on mobile
      document.addEventListener('click', function(e) {
        if (window.innerWidth < 1024 && 
            !sidebar.contains(e.target) && 
            !mobileMenuButton.contains(e.target) &&
            sidebar.classList.contains('sidebar--mobile-open')) {
          sidebar.classList.remove('sidebar--mobile-open');
          mobileMenuButton.querySelector('svg').innerHTML = '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>';
          mobileMenuButton.setAttribute('aria-label', 'Open navigation menu');
        }
      });
    }
  });
</script>