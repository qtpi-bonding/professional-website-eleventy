---
layout: layouts/base.njk
hideHeader: true
---

{# Sidebar Portfolio Layout #}
<div class="portfolio-layout flex min-h-screen bg-surface">
  
  {# Left Sidebar - Fixed Navigation #}
  <aside class="sidebar fixed left-0 top-0 h-screen w-80 bg-nav-background text-nav-text overflow-y-auto z-10 border-r border-secondary border-opacity-20">
    <div class="sidebar-content p-8">
      
      {# Personal Information Header #}
      <header class="sidebar-header mb-12">
        <h1 class="text-3xl font-headline font-bold text-nav-text mb-2">
          {{ site.author.name }}
        </h1>
        <p class="text-lg text-nav-text mb-4 font-medium">
          {{ site.author.title }}
        </p>
        <p class="text-sm text-textSecondary leading-relaxed mb-6">
          {{ site.author.description or site.author.bio }}
        </p>
        
        {# Social Links and Theme Toggle #}
        <div class="flex items-center justify-between mb-8">
          <div class="flex items-center gap-4">
            <a href="{{ site.social.github }}" 
               target="_blank" 
               rel="noopener noreferrer"
               class="text-textSecondary hover:text-nav-hover transition-colors duration-200"
               aria-label="GitHub profile">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd"/>
              </svg>
            </a>
            
            <a href="{{ site.social.linkedin }}" 
               target="_blank" 
               rel="noopener noreferrer"
               class="text-textSecondary hover:text-nav-hover transition-colors duration-200"
               aria-label="LinkedIn profile">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
              </svg>
            </a>
            
            <a href="{{ site.social.orcid }}" 
               target="_blank" 
               rel="noopener noreferrer"
               class="text-textSecondary hover:text-nav-hover transition-colors duration-200"
               aria-label="ORCID profile">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path d="M12 0C5.372 0 0 5.372 0 12s5.372 12 12 12 12-5.372 12-12S18.628 0 12 0zM7.369 4.378c.525 0 .947.431.947.947s-.422.947-.947.947a.95.95 0 01-.947-.947c0-.525.422-.947.947-.947zm-.722 3.038h1.444v10.041H6.647V7.416zm3.562 0h3.9c3.712 0 5.344 2.653 5.344 5.025 0 2.578-2.016 5.016-5.325 5.016h-3.919V7.416zm1.444 1.303v7.444h2.297c2.359 0 3.881-1.303 3.881-3.722 0-2.016-1.522-3.722-3.881-3.722h-2.297z"/>
              </svg>
            </a>
            
            <a href="mailto:{{ site.author.email }}" 
               class="text-textSecondary hover:text-nav-hover transition-colors duration-200"
               aria-label="Email contact">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
              </svg>
            </a>
          </div>
          
          {# Theme toggle button in sidebar #}
          <button id="sidebar-theme-toggle" 
                  data-theme-toggle
                  class="p-2 rounded-md bg-surface border border-neutral-200 hover:bg-neutral-100 transition-colors duration-200"
                  aria-label="{{ site.content.accessibility.toggleTheme }}">
            <svg class="w-5 h-5 text-text" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"></path>
            </svg>
          </button>
        </div>
      </header>
      
      {# Navigation Menu #}
      <nav class="sidebar-nav mb-8" role="navigation" aria-label="Main navigation">
        <ul class="space-y-2">
          <li>
            <a href="#about-section" 
               class="nav-link block px-4 py-2 text-nav-text hover:text-nav-hover border-2 border-transparent hover:border-nav-hover rounded-md transition-all duration-200 scroll-smooth">
              About
            </a>
          </li>
          <li>
            <a href="#experience-section" 
               class="nav-link block px-4 py-2 text-nav-text hover:text-nav-hover border-2 border-transparent hover:border-nav-hover rounded-md transition-all duration-200 scroll-smooth">
              Experience
            </a>
          </li>
          <li>
            <a href="#projects-section" 
               class="nav-link block px-4 py-2 text-nav-text hover:text-nav-hover border-2 border-transparent hover:border-nav-hover rounded-md transition-all duration-200 scroll-smooth">
              Projects
            </a>
          </li>
          <li>
            <a href="#publications-section" 
               class="nav-link block px-4 py-2 text-nav-text hover:text-nav-hover border-2 border-transparent hover:border-nav-hover rounded-md transition-all duration-200 scroll-smooth">
              Publications
            </a>
          </li>
        </ul>
      </nav>
      
      {# Filter System in Sidebar #}
      <div class="sidebar-filters">
        <h3 class="text-sm font-semibold text-textSecondary uppercase tracking-wide mb-4">
          {{ site.content.filters.title }}
        </h3>
        {% set sidebarFilters = [
          { id: 'all', label: site.content.filters.labels.all, ariaLabel: 'Show all content' },
          { id: 'science', label: site.content.filters.labels.science, ariaLabel: 'Show science content only' },
          { id: 'policy', label: site.content.filters.labels.policy, ariaLabel: 'Show policy content only' },
          { id: 'tech', label: site.content.filters.labels.tech, ariaLabel: 'Show technology content only' }
        ] %}
        {% set filters = sidebarFilters %}
        {% set activeFilter = 'all' %}
        {% set class = "sidebar-filter-system" %}
        {% include "components/filter-system.njk" %}
      </div>
      
      {# Resume Download #}
      <div class="sidebar-resume mt-8 pt-8 border-t border-secondary border-opacity-20">
        <a href="{{ site.resume.path }}" 
           class="inline-flex items-center justify-center w-full px-4 py-3 bg-primary text-surface rounded-md font-medium hover:bg-secondary transition-colors duration-200"
           aria-label="{{ site.content.navigation.downloadResume }}">
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
          </svg>
          {{ site.content.navigation.downloadResume }}
        </a>
      </div>
    </div>
  </aside>
  
  {# Main Content Area - Scrollable #}
  <main class="main-content flex-1 ml-80 min-h-screen" role="main">
    <div class="content-wrapper max-w-4xl mx-auto px-8 py-12">
      
      {# About Section #}
      <section id="about-section" class="content-section mb-16">
        <header class="section-header mb-8">
          <h2 class="text-3xl font-headline font-bold text-text mb-4">{{ site.content.sections.about.title }}</h2>
        </header>
        
        <div class="prose prose-lg max-w-none text-textSecondary">
          <p class="text-xl leading-relaxed mb-6">{{ site.description }}</p>
          <p class="leading-relaxed">{{ site.author.bio }}</p>
          
          <div class="mt-8 p-6 bg-neutral-100 rounded-lg">
            <h3 class="text-lg font-semibold text-text mb-4">{{ site.content.currentFocus.title }}</h3>
            <p class="text-textSecondary">
              {{ site.content.currentFocus.description }}
            </p>
          </div>
        </div>
      </section>

      {# Experience Section #}
      <section id="experience-section" class="content-section mb-16" data-section-tags="{{ collections.experience | getAllTags | join(',') }}">
        <header class="section-header mb-8">
          <h2 class="text-3xl font-headline font-bold text-text mb-4">{{ site.content.sections.experience.title }}</h2>
          <p class="text-textSecondary">{{ site.content.sections.experience.description }}</p>
        </header>
        
        <div class="experience-grid space-y-6">
          {% for experience in collections.experience %}
            {% set class = "experience-item" %}
            {% include "components/experience-card.njk" %}
          {% endfor %}
        </div>
      </section>

      {# Projects Section #}
      <section id="projects-section" class="content-section mb-16" data-section-tags="{{ collections.work | filterByType('project') | getAllTags | join(',') }}">
        <header class="section-header mb-8">
          <h2 class="text-3xl font-headline font-bold text-text mb-4">{{ site.content.sections.projects.title }}</h2>
          <p class="text-textSecondary">{{ site.content.sections.projects.description }}</p>
        </header>
        
        <div class="projects-grid grid gap-6 md:grid-cols-2">
          {% for workItem in collections.work %}
            {% if workItem.data.type == 'project' %}
              {% set class = "work-item project-item" %}
              {% include "components/work-item-card.njk" %}
            {% endif %}
          {% endfor %}
        </div>
      </section>

      {# Publications Section #}
      <section id="publications-section" class="content-section mb-16" data-section-tags="{{ collections.work | filterByType('publication') | getAllTags | join(',') }}">
        <header class="section-header mb-8">
          <h2 class="text-3xl font-headline font-bold text-text mb-4">{{ site.content.sections.publications.title }}</h2>
          <p class="text-textSecondary">{{ site.content.sections.publications.description }}</p>
        </header>
        
        <div class="publications-grid space-y-6">
          {% for workItem in collections.work %}
            {% if workItem.data.type == 'publication' %}
              {% set class = "work-item publication-item" %}
              {% include "components/work-item-card.njk" %}
            {% endif %}
          {% endfor %}
        </div>
      </section>

      {# Contact Section #}
      <section id="contact-section" class="content-section">
        <header class="section-header mb-8">
          <h2 class="text-3xl font-headline font-bold text-text mb-4">{{ site.content.sections.contact.title }}</h2>
          <p class="text-textSecondary">{{ site.content.sections.contact.description }}</p>
        </header>
        
        <div class="contact-content">
          <div class="max-w-md">
            <a href="mailto:{{ site.author.email }}" 
               class="contact-card flex items-center p-6 bg-neutral-100 rounded-lg hover:bg-neutral-200 transition-colors duration-200">
              <div class="contact-icon mr-4">
                <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-text mb-1">{{ site.content.labels.email }}</h3>
                <p class="text-textSecondary">{{ site.author.email }}</p>
              </div>
            </a>
          </div>
        </div>
      </section>
      
      {# Footer - Inside main content #}
      <footer class="mt-16 pt-8 border-t border-secondary border-opacity-20" role="contentinfo">
        <div class="text-center">
          <p class="text-textSecondary text-sm">
            ¬© 2025 {{ site.author.name }}. All rights reserved.
          </p>
        </div>
      </footer>
    </div>
  </main>
</div>

{# Standalone JavaScript - No external dependencies #}
<script>
(function() {
  'use strict';
  
  console.log('üöÄ Standalone homepage JavaScript loading...');
  
  // Simple theme toggle functionality
  function setupThemeToggle() {
    const themeToggle = document.getElementById('sidebar-theme-toggle');
    console.log('üé® Theme toggle button found:', !!themeToggle);
    
    if (!themeToggle) return;
    
    // Wait for theme system to be available
    function waitForThemeSystem() {
      if (window.themeSystem) {
        console.log('üé® Theme system available, setting up toggle');
        
        // Add click handler
        themeToggle.addEventListener('click', function(e) {
          e.preventDefault();
          e.stopPropagation();
          console.log('üé® Theme toggle clicked!');
          
          const beforeTheme = window.themeSystem.getEffectiveTheme();
          console.log('üé® Current theme before toggle:', beforeTheme);
          
          window.themeSystem.toggleTheme();
          
          // Log theme change
          setTimeout(() => {
            const afterTheme = window.themeSystem.getEffectiveTheme();
            console.log('üé® Theme after toggle:', afterTheme);
            console.log('üé® CSS variables after toggle:', {
              surface: getComputedStyle(document.documentElement).getPropertyValue('--color-surface'),
              text: getComputedStyle(document.documentElement).getPropertyValue('--color-text'),
              primary: getComputedStyle(document.documentElement).getPropertyValue('--color-primary')
            });
          }, 100);
        });
        
        console.log('‚úÖ Theme toggle initialized with ThemeSystem');
      } else {
        console.log('üé® Theme system not ready, retrying...');
        setTimeout(waitForThemeSystem, 100);
      }
    }
    
    waitForThemeSystem();
  }
  
  // Simple navigation scrolling
  function setupNavigation() {
    const navLinks = document.querySelectorAll('.sidebar-nav a[href^="#"]');
    const mainContent = document.querySelector('.main-content');
    
    console.log('üß≠ Navigation links found:', navLinks.length);
    console.log('üìÑ Main content found:', !!mainContent);
    
    if (!mainContent || navLinks.length === 0) return;
    
    // Debug main content properties
    console.log('üìÑ Main content scroll properties:', {
      scrollTop: mainContent.scrollTop,
      scrollHeight: mainContent.scrollHeight,
      clientHeight: mainContent.clientHeight,
      overflowY: getComputedStyle(mainContent).overflowY
    });
    
    navLinks.forEach(function(link, index) {
      const href = link.getAttribute('href');
      console.log('üîó Setting up link ' + (index + 1) + ':', href);
      
      link.addEventListener('click', function(e) {
        e.preventDefault();
        e.stopPropagation();
        console.log('üß≠ Navigation clicked:', href);
        
        const targetId = href.substring(1);
        const targetSection = document.getElementById(targetId);
        
        console.log('üéØ Target section found:', !!targetSection);
        
        if (targetSection) {
          // Get the position relative to the main content
          const mainContentRect = mainContent.getBoundingClientRect();
          const targetRect = targetSection.getBoundingClientRect();
          const currentScrollTop = mainContent.scrollTop;
          
          // Calculate the target position
          const targetTop = currentScrollTop + (targetRect.top - mainContentRect.top) - 80;
          
          console.log('üìú Scroll calculation:', {
            mainContentTop: mainContentRect.top,
            targetTop: targetRect.top,
            currentScrollTop: currentScrollTop,
            calculatedTarget: targetTop
          });
          
          // Try multiple scroll methods
          console.log('üìú Attempting scroll to position:', targetTop);
          
          // Method 1: scrollTo with smooth behavior
          mainContent.scrollTo({
            top: targetTop,
            behavior: 'smooth'
          });
          
          // Method 2: Fallback with scrollTop (in case scrollTo doesn't work)
          setTimeout(function() {
            if (Math.abs(mainContent.scrollTop - targetTop) > 10) {
              console.log('üìú Fallback: Using scrollTop directly');
              mainContent.scrollTop = targetTop;
              
              // Method 3: Try scrolling the window as last resort
              setTimeout(function() {
                if (Math.abs(mainContent.scrollTop - targetTop) > 10) {
                  console.log('üìú Last resort: Scrolling window to element');
                  targetSection.scrollIntoView({ 
                    behavior: 'smooth', 
                    block: 'start',
                    inline: 'nearest'
                  });
                }
              }, 100);
            }
          }, 100);
          
          // Update active state
          navLinks.forEach(function(navLink) {
            navLink.classList.remove('active');
          });
          link.classList.add('active');
          
          console.log('‚úÖ Scroll initiated');
          
          // Verify scroll after a delay
          setTimeout(function() {
            console.log('üìú Final scroll position:', mainContent.scrollTop);
          }, 1000);
        } else {
          console.log('‚ùå Target section not found');
        }
      });
    });
    
    console.log('‚úÖ Navigation initialized');
  }
  
  // Simple content filtering
  function setupFiltering() {
    const filterButtons = document.querySelectorAll('.filter-button');
    const sections = document.querySelectorAll('.content-section');
    
    console.log('üîç Filter buttons found:', filterButtons.length);
    console.log('üìÑ Content sections found:', sections.length);
    
    if (filterButtons.length === 0) return;
    
    filterButtons.forEach(function(button) {
      button.addEventListener('click', function(e) {
        e.preventDefault();
        e.stopPropagation();
        
        const filter = this.getAttribute('data-filter') || this.textContent.toLowerCase().trim();
        console.log('üîç Filter clicked:', filter);
        
        // Update active button
        filterButtons.forEach(function(btn) {
          btn.classList.remove('filter-button--active');
          btn.classList.add('filter-button--inactive');
          btn.setAttribute('aria-pressed', 'false');
        });
        this.classList.add('filter-button--active');
        this.classList.remove('filter-button--inactive');
        this.setAttribute('aria-pressed', 'true');
        
        // Filter individual items within sections instead of entire sections
        const allItems = document.querySelectorAll('.experience-item, .work-item, .project-item, .publication-item');
        
        console.log('üîç Found', allItems.length, 'filterable items');
        
        allItems.forEach(function(item) {
          const itemTags = item.getAttribute('data-tags') || '';
          const tags = itemTags.split(',').map(function(tag) { return tag.trim(); }).filter(function(tag) { return tag; });
          
          console.log('üîç Item:', item.className, 'has tags:', tags);
          
          if (filter === 'all' || tags.includes(filter) || (filter === 'tech' && tags.includes('technology'))) {
            item.style.display = '';
            item.setAttribute('aria-hidden', 'false');
            console.log('üîç Showing item with tags:', tags);
          } else {
            item.style.display = 'none';
            item.setAttribute('aria-hidden', 'true');
            console.log('üîç Hiding item with tags:', tags);
          }
        });
        
        // Show/hide sections based on whether they have visible items
        sections.forEach(function(section) {
          const visibleItems = section.querySelectorAll('.experience-item:not([aria-hidden="true"]), .work-item:not([aria-hidden="true"]), .project-item:not([aria-hidden="true"]), .publication-item:not([aria-hidden="true"])');
          
          if (visibleItems.length > 0 || section.id === 'about-section' || section.id === 'contact-section') {
            section.style.display = '';
            section.setAttribute('aria-hidden', 'false');
            console.log('üîç Showing section:', section.id, 'with', visibleItems.length, 'visible items');
          } else {
            section.style.display = 'none';
            section.setAttribute('aria-hidden', 'true');
            console.log('üîç Hiding section:', section.id, 'no visible items');
          }
        });
        
        console.log('üîç Filter applied:', filter);
      });
    });
    
    console.log('‚úÖ Filtering initialized');
  }
  
  // Initialize everything
  function initialize() {
    console.log('üîß Initializing homepage functionality...');
    
    setupThemeToggle();
    setupNavigation();
    setupFiltering();
    
    console.log('üéâ Homepage initialization complete!');
  }
  
  // Run when DOM is ready
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initialize);
  } else {
    initialize();
  }
  
})();
</script>

<style>
  /* Sidebar Portfolio Layout Styles */
  
  /* Portfolio layout container */
  .portfolio-layout {
    @apply min-h-screen;
  }
  
  /* Sidebar styles */
  .sidebar {
    @apply bg-nav-background text-nav-text;
    box-shadow: 2px 0 10px rgba(0, 0, 0, 0.1);
  }
  
  .sidebar-content {
    @apply p-8;
  }
  
  .sidebar-header h1 {
    @apply text-3xl font-headline font-bold text-nav-text mb-2;
  }
  
  .sidebar-nav .nav-link {
    @apply block px-4 py-2 text-nav-text hover:text-nav-hover border-2 border-transparent hover:border-nav-hover rounded-md transition-all duration-200;
  }
  
  .sidebar-nav .nav-link.active {
    @apply bg-nav-active text-surface font-semibold;
  }
  
  /* Sidebar filter system styling */
  .sidebar-filter-system .filter-button {
    @apply w-full justify-start mb-2 bg-filter-inactive text-filter-inactive-text hover:bg-filter-hover hover:text-filter-hover-text border border-secondary border-opacity-20;
    min-height: auto;
    padding: 0.5rem 1rem;
  }
  
  .sidebar-filter-system .filter-button--active {
    @apply bg-filter-active text-filter-active-text border-filter-active;
    box-shadow: none;
    transform: none;
  }
  
  .sidebar-filter-system .filter-button--inactive {
    @apply bg-filter-inactive text-filter-inactive-text border-secondary border-opacity-20;
  }
  
  /* Main content area */
  .main-content {
    @apply flex-1 min-h-screen;
    margin-left: 20rem; /* 320px sidebar width */
    overflow-y: auto !important;
    height: 100vh !important;
    position: relative;
  }
  
  .content-wrapper {
    @apply max-w-4xl mx-auto px-8 py-12;
  }
  
  /* Content sections */
  .content-section {
    @apply mb-16;
  }
  
  .section-header {
    @apply mb-8;
  }
  
  .section-header h2 {
    @apply text-3xl font-headline font-bold text-text mb-4;
  }
  
  .section-header p {
    @apply text-textSecondary;
  }
  
  /* Grid layouts for content */
  .experience-grid {
