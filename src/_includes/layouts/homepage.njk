---
layout: layouts/base.njk
hideHeader: true
---

{# Sidebar Portfolio Layout #}
<div class="portfolio-layout flex min-h-screen bg-surface">
  
  {# Mobile Sidebar Overlay #}
  <div class="sidebar-overlay" 
       data-sidebar-overlay
       aria-hidden="true"
       style="display: none;">
  </div>
  
  {# Mobile Hamburger Menu Button #}
  <button class="mobile-menu-toggle md:hidden" 
          data-sidebar-toggle
          aria-label="Open navigation menu"
          aria-expanded="false"
          aria-controls="main-sidebar"
          role="button"
          tabindex="0">
    
    {# Animated hamburger icon with ARIA hidden #}
    <span class="hamburger-line" aria-hidden="true"></span>
    <span class="hamburger-line" aria-hidden="true"></span>
    <span class="hamburger-line" aria-hidden="true"></span>
  </button>
  
  {# Floating Toggle Button for Desktop (when sidebar is hidden) #}
  <button class="floating-sidebar-toggle hidden lg:block" 
          data-sidebar-toggle
          aria-label="Show navigation sidebar"
          aria-expanded="false"
          aria-controls="main-sidebar"
          role="button"
          tabindex="0"
          aria-hidden="true"
          style="display: none;">
    
    <svg class="w-6 h-6 text-text" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
    </svg>
  </button>
  
  {# Left Sidebar - Fixed Navigation #}
  <aside id="main-sidebar"
         class="sidebar fixed left-0 top-0 h-screen w-80 bg-nav-background text-nav-text overflow-y-auto z-10 border-r border-secondary border-opacity-20"
         data-sidebar
         role="navigation"
         aria-label="Main navigation"
         aria-hidden="true"
         data-sidebar-state="hidden">
    <div class="sidebar-content p-8">
      
      {# Personal Information Header #}
      <header class="sidebar-header mb-12">
        {# Close button for mobile #}
        <button class="sidebar-close-button md:hidden absolute top-4 right-4 p-2 text-textSecondary hover:text-text transition-colors duration-200"
                data-sidebar-close
                aria-label="Close navigation"
                role="button"
                tabindex="0">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
        
        {# Toggle button for tablet/desktop #}
        <button class="sidebar-toggle-button hidden md:block absolute top-4 right-4 p-2 text-textSecondary hover:text-text transition-colors duration-200"
                data-sidebar-toggle
                aria-label="Hide navigation sidebar"
                aria-expanded="true"
                aria-controls="main-sidebar"
                role="button"
                tabindex="0">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 19l-7-7 7-7m8 14l-7-7 7-7"></path>
          </svg>
        </button>
        
        <h1 class="text-3xl font-headline font-bold text-nav-text mb-2">
          {{ site.author.name }}
        </h1>
        <p class="text-lg text-nav-text mb-4 font-medium">
          {{ site.author.title }}
        </p>
        <p class="text-sm text-textSecondary leading-relaxed mb-6">
          {{ site.author.description or site.author.bio }}
        </p>
        
        {# Social Links and Theme Toggle #}
        <div class="flex items-center justify-between mb-8">
          <div class="flex items-center" style="gap: var(--touch-target-spacing, 8px);">
            <a href="{{ site.social.github }}" 
               target="_blank" 
               rel="noopener noreferrer"
               class="social-link text-textSecondary hover:text-nav-hover transition-colors duration-200"
               aria-label="GitHub profile">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd"/>
              </svg>
            </a>
            
            <a href="{{ site.social.linkedin }}" 
               target="_blank" 
               rel="noopener noreferrer"
               class="social-link text-textSecondary hover:text-nav-hover transition-colors duration-200"
               aria-label="LinkedIn profile">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
              </svg>
            </a>
            
            <a href="{{ site.social.orcid }}" 
               target="_blank" 
               rel="noopener noreferrer"
               class="social-link text-textSecondary hover:text-nav-hover transition-colors duration-200"
               aria-label="ORCID profile">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path d="M12 0C5.372 0 0 5.372 0 12s5.372 12 12 12 12-5.372 12-12S18.628 0 12 0zM7.369 4.378c.525 0 .947.431.947.947s-.422.947-.947.947a.95.95 0 01-.947-.947c0-.525.422-.947.947-.947zm-.722 3.038h1.444v10.041H6.647V7.416zm3.562 0h3.9c3.712 0 5.344 2.653 5.344 5.025 0 2.578-2.016 5.016-5.325 5.016h-3.919V7.416zm1.444 1.303v7.444h2.297c2.359 0 3.881-1.303 3.881-3.722 0-2.016-1.522-3.722-3.881-3.722h-2.297z"/>
              </svg>
            </a>
            
            <a href="mailto:{{ site.author.email }}" 
               class="social-link text-textSecondary hover:text-nav-hover transition-colors duration-200"
               aria-label="Email contact">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
              </svg>
            </a>
          </div>
          
          {# Theme toggle button in sidebar #}
          <button id="sidebar-theme-toggle" 
                  data-theme-toggle
                  class="theme-toggle rounded-md bg-surface border border-neutral-200 hover:bg-neutral-100 transition-colors duration-200"
                  aria-label="{{ site.content.accessibility.toggleTheme }}">
            <svg class="w-5 h-5 text-text" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"></path>
            </svg>
          </button>
        </div>
      </header>
      
      {# Navigation Menu #}
      <nav class="sidebar-nav mb-8" role="navigation" aria-label="Main navigation">
        <ul class="space-y-2" style="gap: var(--touch-target-spacing, 8px);">
          <li>
            <a href="#about-section" 
               class="nav-link block px-4 py-2 text-nav-text hover:text-nav-hover border-2 border-transparent hover:border-nav-hover rounded-md transition-all duration-200 scroll-smooth">
              About
            </a>
          </li>
          <li>
            <a href="#experience-section" 
               class="nav-link block px-4 py-2 text-nav-text hover:text-nav-hover border-2 border-transparent hover:border-nav-hover rounded-md transition-all duration-200 scroll-smooth">
              Experience
            </a>
          </li>
          <li>
            <a href="#projects-section" 
               class="nav-link block px-4 py-2 text-nav-text hover:text-nav-hover border-2 border-transparent hover:border-nav-hover rounded-md transition-all duration-200 scroll-smooth">
              Projects
            </a>
          </li>
          <li>
            <a href="#publications-section" 
               class="nav-link block px-4 py-2 text-nav-text hover:text-nav-hover border-2 border-transparent hover:border-nav-hover rounded-md transition-all duration-200 scroll-smooth">
              Publications
            </a>
          </li>
        </ul>
      </nav>
      
      {# Filter System in Sidebar #}
      <div class="sidebar-filters">
        <h3 class="text-sm font-semibold text-textSecondary uppercase tracking-wide mb-4">
          {{ site.content.filters.title }}
        </h3>
        {% set sidebarFilters = [
          { id: 'all', label: site.content.filters.labels.all, ariaLabel: 'Show all content' },
          { id: 'science', label: site.content.filters.labels.science, ariaLabel: 'Show science content only' },
          { id: 'policy', label: site.content.filters.labels.policy, ariaLabel: 'Show policy content only' },
          { id: 'tech', label: site.content.filters.labels.tech, ariaLabel: 'Show technology content only' }
        ] %}
        {% set filters = sidebarFilters %}
        {% set activeFilter = 'all' %}
        {% set class = "sidebar-filter-system" %}
        {% include "components/filter-system.njk" %}
      </div>
      
      {# Resume Download #}
      <div class="sidebar-resume mt-8 pt-8 border-t border-secondary border-opacity-20">
        <a href="{{ site.resume.path }}" 
           class="inline-flex items-center justify-center w-full px-4 py-3 bg-primary text-surface rounded-md font-medium hover:bg-secondary transition-colors duration-200"
           aria-label="{{ site.content.navigation.downloadResume }}">
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
          </svg>
          {{ site.content.navigation.downloadResume }}
        </a>
      </div>
    </div>
  </aside>
  
  {# Main Content Area - Scrollable #}
  <main class="main-content flex-1 ml-80 min-h-screen" role="main">
    <div class="content-wrapper max-w-4xl mx-auto px-8 py-12">
      
      {# About Section #}
      <section id="about-section" class="content-section mb-16">
        <header class="section-header mb-8">
          <h2 class="text-3xl font-headline font-bold text-text mb-4">{{ site.content.sections.about.title }}</h2>
        </header>
        
        <div class="prose prose-lg max-w-none text-textSecondary">
          <p class="text-xl leading-relaxed mb-6">{{ site.description }}</p>
          <p class="leading-relaxed">{{ site.author.bio }}</p>
          
          <div class="mt-8 p-6 bg-neutral-100 rounded-lg">
            <h3 class="text-lg font-semibold text-text mb-4">{{ site.content.currentFocus.title }}</h3>
            <p class="text-textSecondary">
              {{ site.content.currentFocus.description }}
            </p>
          </div>
        </div>
      </section>

      {# Experience Section #}
      <section id="experience-section" class="content-section mb-16" data-section-tags="{{ collections.experience | getAllTags | join(',') }}">
        <header class="section-header mb-8">
          <h2 class="text-3xl font-headline font-bold text-text mb-4">{{ site.content.sections.experience.title }}</h2>
          <p class="text-textSecondary">{{ site.content.sections.experience.description }}</p>
        </header>
        
        <div class="experience-grid space-y-6">
          {% for experience in collections.experience %}
            {% set class = "experience-item" %}
            {% include "components/experience-card.njk" %}
          {% endfor %}
        </div>
      </section>

      {# Projects Section #}
      <section id="projects-section" class="content-section mb-16" data-section-tags="{{ collections.work | filterByType('project') | getAllTags | join(',') }}">
        <header class="section-header mb-8">
          <h2 class="text-3xl font-headline font-bold text-text mb-4">{{ site.content.sections.projects.title }}</h2>
          <p class="text-textSecondary">{{ site.content.sections.projects.description }}</p>
        </header>
        
        <div class="projects-grid space-y-6">
          {% for workItem in collections.work %}
            {% if workItem.data.type == 'project' %}
              {% set class = "work-item project-item" %}
              {% include "components/work-item-card.njk" %}
            {% endif %}
          {% endfor %}
        </div>
      </section>

      {# Publications Section #}
      <section id="publications-section" class="content-section mb-16" data-section-tags="{{ collections.work | filterByType('publication') | getAllTags | join(',') }}">
        <header class="section-header mb-8">
          <h2 class="text-3xl font-headline font-bold text-text mb-4">{{ site.content.sections.publications.title }}</h2>
          <p class="text-textSecondary">{{ site.content.sections.publications.description }}</p>
        </header>
        
        <div class="publications-grid space-y-6">
          {% for workItem in collections.work %}
            {% if workItem.data.type == 'publication' %}
              {% set class = "work-item publication-item" %}
              {% include "components/work-item-card.njk" %}
            {% endif %}
          {% endfor %}
        </div>
      </section>

      {# Contact Section #}
      <section id="contact-section" class="content-section">
        <header class="section-header mb-8">
          <h2 class="text-3xl font-headline font-bold text-text mb-4">{{ site.content.sections.contact.title }}</h2>
          <p class="text-textSecondary">{{ site.content.sections.contact.description }}</p>
        </header>
        
        <div class="contact-content">
          <div class="max-w-md">
            <a href="mailto:{{ site.author.email }}" 
               class="contact-card flex items-center p-6 bg-neutral-100 rounded-lg hover:bg-neutral-200 transition-colors duration-200">
              <div class="contact-icon mr-4">
                <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-text mb-1">{{ site.content.labels.email }}</h3>
                <p class="text-textSecondary">{{ site.author.email }}</p>
              </div>
            </a>
          </div>
        </div>
      </section>
      
      {# Footer - Inside main content #}
      <footer class="mt-16 pt-8 border-t border-secondary border-opacity-20" role="contentinfo">
        <div class="text-center">
          <p class="text-textSecondary text-sm">
            Â© 2025 {{ site.author.name }}. All rights reserved.
          </p>
        </div>
      </footer>
    </div>
  </main>
</div>

{# Load JavaScript modules #}
<script src="/assets/js/sidebar-manager.js"></script>
<script src="/assets/js/navigation-system.js"></script>
<script src="/assets/js/content-filter.js"></script>

{# Simple theme toggle integration #}
<script>
(function() {
  'use strict';
  
  console.log('ðŸš€ Homepage theme integration loading...');
  
  // Simple theme toggle functionality
  function setupThemeToggle() {
    const themeToggle = document.getElementById('sidebar-theme-toggle');
    console.log('ðŸŽ¨ Theme toggle button found:', !!themeToggle);
    
    if (!themeToggle) return;
    
    // Wait for theme system to be available
    function waitForThemeSystem() {
      if (window.themeSystem) {
        console.log('ðŸŽ¨ Theme system available, setting up toggle');
        
        // Add click handler
        themeToggle.addEventListener('click', function(e) {
          e.preventDefault();
          e.stopPropagation();
          console.log('ðŸŽ¨ Theme toggle clicked!');
          
          const beforeTheme = window.themeSystem.getEffectiveTheme();
          console.log('ðŸŽ¨ Current theme before toggle:', beforeTheme);
          
          window.themeSystem.toggleTheme();
          
          // Log theme change
          setTimeout(() => {
            const afterTheme = window.themeSystem.getEffectiveTheme();
            console.log('ðŸŽ¨ Theme after toggle:', afterTheme);
          }, 100);
        });
        
        console.log('âœ… Theme toggle initialized with ThemeSystem');
      } else {
        console.log('ðŸŽ¨ Theme system not ready, retrying...');
        setTimeout(waitForThemeSystem, 100);
      }
    }
    
    waitForThemeSystem();
  }
  
  // Debug and fix sidebar state on desktop
  function debugAndFixSidebar() {
    console.log('ðŸ” Debugging sidebar state...');
    
    // Wait for sidebar manager to be available
    function waitForSidebarManager() {
      if (window.sidebarManager) {
        console.log('ðŸ”§ Sidebar manager available, checking state...');
        
        const manager = window.sidebarManager;
        const currentState = manager.getCurrentState();
        
        console.log('ðŸ“Š Current sidebar state:', currentState);
        console.log('ðŸ“ Window size:', window.innerWidth + 'x' + window.innerHeight);
        console.log('ðŸ“± Device type:', manager.currentDeviceType);
        console.log('ðŸ‘ï¸ Is visible:', manager.isVisible);
        
        // FORCE SIDEBAR TO SHOW ON DESKTOP - DEPLOYMENT FIX
        if (window.innerWidth >= 1024) {
          console.log('ðŸš¨ Desktop detected - ensuring sidebar is visible...');
          
          // Clear any problematic preferences that might be hiding the sidebar
          try {
            const preferences = localStorage.getItem('sidebar-preferences');
            if (preferences) {
              console.log('ðŸ§¹ Found stored preferences:', preferences);
              console.log('ðŸ§¹ Clearing preferences to reset to defaults...');
              localStorage.removeItem('sidebar-preferences');
            }
          } catch (e) {
            console.warn('Failed to clear preferences:', e);
          }
          
          // Force show the sidebar on desktop regardless of current state
          if (!manager.isVisible) {
            console.log('ðŸ”§ Force showing sidebar...');
            manager.forceShow();
          }
          
          // Double-check after a short delay
          setTimeout(() => {
            if (!manager.isVisible && window.innerWidth >= 1024) {
              console.log('ðŸ”§ Second attempt to force show sidebar...');
              manager.forceShow();
              
              // If still not working, manually update the DOM
              const sidebar = document.querySelector('[data-sidebar]');
              const mainContent = document.querySelector('.main-content');
              
              if (sidebar && mainContent) {
                console.log('ðŸ”§ Manually updating DOM classes...');
                sidebar.classList.add('sidebar--visible');
                sidebar.setAttribute('aria-hidden', 'false');
                sidebar.setAttribute('data-sidebar-state', 'visible');
                mainContent.classList.remove('main-content--sidebar-hidden');
              }
            }
          }, 200);
        } else if (manager.isVisible) {
          console.log('âœ… Sidebar is correctly visible');
        }
      } else {
        console.log('ðŸ”§ Sidebar manager not ready, retrying...');
        setTimeout(waitForSidebarManager, 100);
      }
    }
    
    waitForSidebarManager();
  }
  
  // Initialize theme toggle when DOM is ready
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', function() {
      setupThemeToggle();
      debugAndFixSidebar();
    });
  } else {
    setupThemeToggle();
    debugAndFixSidebar();
  }
  
})();
</script>

<style>
  /* Sidebar Portfolio Layout Styles */
  
  /* Portfolio layout container */
  .portfolio-layout {
    @apply min-h-screen;
  }
  
  /* Sidebar styles */
  .sidebar {
    @apply bg-nav-background text-nav-text;
    box-shadow: 2px 0 10px rgba(0, 0, 0, 0.1);
  }
  
  .sidebar-content {
    @apply p-8;
  }
  
  .sidebar-header h1 {
    @apply text-3xl font-headline font-bold text-nav-text mb-2;
  }
  
  /* Social links touch optimization */
  .social-link {
    min-height: var(--touch-target-min-size, 44px);
    min-width: var(--touch-target-min-size, 44px);
    padding: 12px;
    border-radius: 8px;
    
    /* Touch optimization */
    touch-action: manipulation;
    -webkit-tap-highlight-color: rgba(0, 0, 0, 0.1);
    -webkit-user-select: none;
    user-select: none;
    
    /* Center content */
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  /* Theme toggle touch optimization */
  .theme-toggle {
    min-height: var(--touch-target-min-size, 44px);
    min-width: var(--touch-target-min-size, 44px);
    padding: 12px;
    
    /* Touch optimization */
    touch-action: manipulation;
    -webkit-tap-highlight-color: rgba(0, 0, 0, 0.1);
    -webkit-user-select: none;
    user-select: none;
    
    /* Center content */
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .sidebar-nav .nav-link {
    @apply block text-nav-text hover:text-nav-hover border-2 border-transparent hover:border-nav-hover rounded-md transition-all duration-200;
    
    /* Touch-friendly sizing and spacing */
    min-height: var(--touch-target-min-size, 44px);
    min-width: var(--touch-target-min-size, 44px);
    padding: 12px 16px;
    
    /* Touch optimization */
    touch-action: manipulation;
    -webkit-tap-highlight-color: rgba(0, 0, 0, 0.1);
    -webkit-user-select: none;
    user-select: none;
    
    /* Ensure proper alignment */
    display: flex;
    align-items: center;
  }
  
  .sidebar-nav .nav-link.active {
    @apply bg-nav-active text-surface font-semibold;
  }
  
  /* Touch vs mouse interaction detection for navigation links */
  @media (hover: hover) {
    /* Mouse hover states */
    .sidebar-nav .nav-link:hover {
      background-color: var(--color-neutral-100);
    }
  }
  
  @media (hover: none) {
    /* Touch active states */
    .sidebar-nav .nav-link:active {
      background-color: var(--color-neutral-200);
      transform: scale(0.98);
    }
    
    .social-link:active {
      background-color: var(--color-neutral-200);
      transform: scale(0.98);
    }
    
    .theme-toggle:active {
      background-color: var(--color-neutral-200);
      transform: scale(0.98);
    }
  }
  
  @media (hover: hover) {
    /* Mouse hover states */
    .social-link:hover {
      background-color: var(--color-neutral-100);
    }
    
    .theme-toggle:hover {
      background-color: var(--color-neutral-100);
    }
