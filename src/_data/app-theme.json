      "toggleButtonActive": "#6b7280",
      "focusRing": "#00C3FF",
      "touchFeedback": "rgba(0, 195, 255, 0.2)"
    }
  },
  "responsive": {
    "breakpoints": {
      "mobile": "0px",
      "tablet": "768px",
      "desktop": "1024px"
    },
    "sidebar": {
      "width": {
        "mobile": "100vw",
        "tablet": "320px",
        "desktop": "320px"
      },
      "defaults": {
        "mobile": "hidden",
        "tablet": "visible",
        "desktop": "visible"
      },
      "animations": {
        "duration": "300ms",
        "easing": "cubic-bezier(0.4, 0, 0.2, 1)"
      }
    },
    "touchTargets": {
      "minSize": "44px",
      "spacing": "8px"
    },
    "content": {
      "wrapper": {
        "padding": {
          "mobile": "16px",
          "tablet": "32px",
          "desktop": "32px"
        },
        "maxWidth": {
          "mobile": "100%",
          "tablet": "768px",
          "desktop": "1024px"
        }
      },
      "sections": {
        "spacing": {
          "mobile": "32px",
          "tablet": "48px",
          "desktop": "64px"
        }
      },
      "cards": {
        "spacing": {
          "mobile": "16px",
          "tablet": "24px",
          "desktop": "24px"
        }
      },
      "text": {
        "lineLength": {
          "mobile": "100%",
          "tablet": "65ch",
          "desktop": "75ch"
        }
      },
      "images": {
        "maxWidth": {
          "mobile": "100%",
          "tablet": "100%",
          "desktop": "100%"
        }
      }
    }
  },
  "accessibility": {
    "contrastRatios": {
      "aa": 4.5,
      "aaa": 7
    },
    "focusRing": {
      "width": "2px",
      "style": "solid",
      "color": "var(--color-focusRing)",
      "offset": "2px"
    },
    "touchTargets": {
      "minSize": "44px",
      "spacing": "8px",
      "feedback": {
        "duration": "150ms",
        "easing": "ease-out"
      }
    }
  }
